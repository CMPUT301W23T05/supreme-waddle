<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/top_panel"
            android:background="@drawable/app_background"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/QR_name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/card_layout_inside"
                android:textSize="40dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/material_dynamic_neutral50"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/card_layout_inside"
                android:padding="2dp"
                android:text="90"
                android:textColor="@color/material_dynamic_neutral50"
                android:textSize="40sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/list_comments"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@color/material_dynamic_neutral50"
            android:dividerHeight="0.5dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="10dp"
            android:id="@+id/middle"
            android:background="@drawable/app_background"
            android:gravity="center"
            >

            <EditText
                android:id="@+id/comment_editor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/list_shape"
                android:hint="Type Comment Here"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/submit_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/list_shape"
                android:text="Post"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>


</FrameLayout>
