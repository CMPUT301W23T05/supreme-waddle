<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Qrky" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E1B5FF</item>
        <item name="colorPrimaryVariant">#E1B5FF</item>
        <item name="colorOnPrimary">#06000A</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFE2BA</item>
        <item name="colorSecondaryVariant">#FFE2BA</item>
        <item name="colorOnSecondary">#06000A</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#FFE2BA</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/josefin_sans_semibold</item>
        <!-- set all text to lowercase -->
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <!-- remove ripple effect -->
        <item name="android:colorControlHighlight">#FFE2BA</item>
        <item name="rippleColor">@null</item>
        <item name="itemRippleColor">@null</item>

        <item name="android:textColorHint">#fcb045</item>

    </style>

    <!-- style of tab layout -->
    <style name="TabTheme" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>